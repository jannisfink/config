{
  "name": "fink/config",
  "description": "A simple yet powerful configuration library for PHP",
  "type": "library",
  "keywords": [
    "config",
    "configuration"
  ],

  "support": {
    "issues": "https://github.com/jannisfink/config/issues"
  },

  "license": "Apache-2.0",
  "authors": [
    {
      "name": "Jannis Fink",
      "email": "github@jannisfink.de"
    }
  ],

  "autoload": {
    "psr-4": {
      "Fink\\config\\": "src/"
    }
  },

  "require": {
    "php": ">=5.6"
  },

  "require-dev": {
    "phpunit/phpunit": "^5.3",
    "apigen/apigen": "^4.0"
  },

  "scripts": {
    "test": "phpunit --configuration phpunit.xml",
    "doc": "apigen generate -s ./src -d ./docs/api"
  }
}
